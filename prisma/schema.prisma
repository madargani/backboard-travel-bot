generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id          String    @id @default(cuid())
  clerkId     String    @unique
  assistantId String    @unique
  email       String
  name        String?
  sessions    Session[]
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model Session {
  id        String    @id @default(cuid())
  title     String?   @default("New Trip")
  userId    String
  threadId  String
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  messages  Message[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model Message {
  id         String   @id @default(cuid())
  role       String
  content    String
  toolCallId String?  // For tool messages - links to the assistant's tool call
  toolCalls  String?  // JSON string of tool calls (for assistant messages with tool_calls)
  sessionId  String
  session    Session  @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}